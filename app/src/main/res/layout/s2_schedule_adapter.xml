<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@null"
        android:layout_marginBottom="15dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:textAlignment="center"
            android:id="@+id/txt_timer"
            android:text="hello world"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:clickable="false"
                android:id="@+id/btn_icon"
                android:padding="3dp"
                android:src="@drawable/svc_1_small"
                android:background="@drawable/round_corners_btn_m1_outlet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <TextView
                android:layout_weight="8"
                android:padding="5dp"
                android:id="@+id/txt_service"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageButton
                android:layout_weight="1"
                android:clickable="false"
                android:padding="3dp"
                android:id="@+id/btn_service"
                android:src="@drawable/svc_0_small"
                android:background="@drawable/round_corners_btn_m1_outlet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="13dp"
        android:layout_weight="2"
        android:background="@null">
        <ImageButton
            android:id="@+id/btn_edit_timer"
            android:text="1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:src="@drawable/ic_edit"
            android:background="@null"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/btn_delete_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_delete"
            android:background="@null"
            android:layout_alignRight="@+id/btn_edit_timer"/>
    </LinearLayout>

</LinearLayout>
