<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="16dp"
    android:id="@+id/btn_ir_layout_background"
    android:background="@drawable/round_corners_btn_m1_co">

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:id="@+id/btn_ir"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/svc_1_big"
        android:background="@null"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:id="@+id/ir_close"
        android:layout_margin="5dp"
        android:background="@null"
        android:src="@drawable/btn_x"/>

    <TextView
        android:id="@+id/txt_ir_edit_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_ir"
        android:textColor="@color/white"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginBottom="0dp"
        />

</RelativeLayout>
