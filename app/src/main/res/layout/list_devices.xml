<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:id="@+id/swipe" android:layout_height="70dp">

    <!-- Bottom View Start-->
    <LinearLayout
        android:orientation="vertical"
        android:background="#FF0000"
        android:id="@+id/bottom_wrapper"
        android:layout_width="60dp"
        android:weightSum="1"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_delete_white"
            android:id="@+id/btn_delete_device"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@null"/>

    </LinearLayout>
    <!-- Bottom View End-->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/device_layout"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/svc_1_big"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/plugname"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingLeft="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="Testing text"
        android:textSize="16sp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_warning"
        android:src="@drawable/marker_warn"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="5dp"
        android:background="@null"
        android:layout_alignTop="@+id/btn_schedule"
        android:layout_toLeftOf="@+id/btn_schedule"

         />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/marker_timer"
        android:id="@+id/btn_schedule"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:layout_marginRight="17dp"
        android:layout_toLeftOf="@+id/btn_switch"

         />

    <ImageButton
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/btn_power"
        android:id="@+id/btn_switch"
        android:layout_marginTop="10dp"
        android:background="@null" />

</RelativeLayout>
    </com.daimajia.swipe.SwipeLayout>